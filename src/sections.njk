---
layout: base.njk
eleventyExcludeFromCollections: true
pagination:
  data: sheet
  size: 1
  alias: section
permalink: "{{ section | slug }}/"
---

<h1>{{ section }}</h1>

{% for item in sheet[section] %}
  <a href="{{ item.url }}" target="_blank" class="resource">
    <h2>
      {{ item.title | dewidow  | safe }}
    </h2>

    {% if item.section == 'Webinar' and item.date %}
      Date: {{ item.date }}
    {% endif %}

    {% if item.description %}<p>{{ item.description }}</p>{% endif %}

    <ul class="resource__meta">
      <li>Author: {{ item.author }}</li>
      <li>Type: {{ item.type }}</li>
      {% if item.tags != "" %}
        <li>
          Tags:
          {% for tag in item.tags %}
            {{ tag }}{% if loop.last == false %}, {% endif %}
          {% endfor %}
        </li>
      {% endif %}
    </ul>
  </a>
{% endfor %}
